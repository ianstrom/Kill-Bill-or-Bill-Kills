from attribute_setters import *
from character import Character

#Debugging tools
import ipdb
chris = Character("Chris", 7)

def speak_prompt(char):
    print(f'{paths[char.curr].person.speech}')
    if "*" == paths[char.curr].person.speech[0]:
        char.clues.append(paths[char.curr].person.speech)
    

def search_prompt(char):
    print(f'{paths[char.curr].thing}')
    if "cloth" in paths[char.curr].thing:
        char.clues.append("Bloody cloth")
    elif "knife" in paths[char.curr].thing:
        char.clues.append("Knife")
    elif "Stairwell" in paths[char.curr].thing:
        char.clues.append("Stairwell key")
    elif "Edith" in paths[char.curr].thing:
        char.clues.append("Edith key")
    elif "sink" in paths[char.curr].thing:
        char.clues.append("Hair")

def accuse_prompt(char):
    if "Edith key" not in char.clues:
        print(f"We have no way of trapping {paths[char.curr].person.name} yet!")
    else:
        paths[7].person = paths[char.curr].person
        paths[char.curr].person = None
        char.curr = 7

def escape_promt(char):
    if char.curr != 2:
        print("You need to go to the stairs to escape")
    else:
        if "Stairwell key" not in char.clues:
            print("You need to find the stairwell key")
        elif "Stairwell key" in char.clues and paths[7].person == None:
            print("You need to trap the killer in Edith")
        elif "Stairwell key" in char.clues and len(char.clues) < 8:
            print("You havent found all the clues")
        elif "Stairwell key" in char.clues and paths[7].person.murderer != True:
            print("You trapped the wrong person")
        elif paths[7].person.murderer == True and len(char.clues) == 8:
            print("You have escaped")
    



ipdb.set_trace()